<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="fill_parent"
    android:layout_height="fill_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.pedro.popularmovies.DetailActivityFragment"
    >

    <TextView
        android:id="@+id/movie_title"
        android:layout_width="fill_parent"
        android:layout_height="100dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="false" />

    <ImageView
        android:layout_width="200dp"
        android:layout_height="280dp"
        android:id="@+id/poster_image"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="88dp"
        android:layout_marginStart="88dp"
        android:layout_marginTop="137dp" />

    <TextView
        android:layout_width="500dp"
        android:layout_height="100dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/synopsis_view"
        android:layout_below="@+id/poster_image"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="58dp" />

    <TextView
        android:layout_width="110dp"
        android:layout_height="50dp"
        android:id="@+id/date_view"
        android:layout_marginTop="63dp"
        android:layout_alignTop="@+id/poster_image"
        android:layout_alignRight="@+id/synopsis_view"
        android:layout_alignEnd="@+id/synopsis_view" />

    <TextView
        android:layout_width="50dp"
        android:layout_height="25dp"
        android:id="@+id/user_rating_view"
        android:layout_below="@+id/date_view"
        android:layout_alignLeft="@+id/date_view"
        android:layout_alignStart="@+id/date_view"
        android:layout_marginTop="63dp" />


</RelativeLayout>
